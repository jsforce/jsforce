{
  "compilerOptions": {
    "target": "es2022",
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "nodenext",
    "paths": {
      "jsforce": [
        "."
      ],
      "jsforce/*": [
        "./*"
      ],
    },
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "noImplicitOverride": true,
  },
  "include": [
    "./src/**/*.ts"
  ]
}